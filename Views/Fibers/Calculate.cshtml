@model BSFiberCore.Models.Calculator

<h2>Вычисление периметра прямоугольника</h2>

<form asp-action="Calculate" method="post">
    <div>
        <label>Длина:</label>
        <input asp-for="Length" type="number" step="0.01" required />
    </div>
    <div>
        <label>Ширина:</label>
        <input asp-for="Width" type="number" step="0.01" required />
    </div>
    <button type="submit">Вычислить периметр</button>
</form>

@if (ViewBag.Perimeter != null)
{
    <h3>Периметр: @ViewBag.Perimeter</h3>
}
