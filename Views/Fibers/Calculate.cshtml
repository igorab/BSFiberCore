@model BSFiberCore.Models.Fiber

<h2>Расчеты:</h2>

<form asp-action = "Calculate" method="post">

    <h4>Геометрические характеристики</h4>
    <p>Выберите тип сечения:</p>
    <div>
        <label for="section1">Прямоугольное</label> 
        <input asp-for="SectionType" type="radio" id="Rectangle" name="SectionType" value="4" />
        &ndash;
        <label for="section2">Тавр T</label>
        <input asp-for="SectionType" type="radio" id="TBeam" name="SectionType" value="1" />
        &ndash;
        <label for="section2">Тавр _L</label>
        <input asp-for="SectionType" type="radio" id="LBeam" name="SectionType" value="5" />
        &ndash;
        <label for="section2">Двутавр</label>
        <input asp-for="SectionType" type="radio" id="IBeam" name="SectionType" value="2" />
        &ndash;
        <label for="section3">Кольцо</label>
        <input asp-for="SectionType" type="radio" id="Ring" name="SectionType" value="3" />
        
    </div>

    <div>
        <p>Прямоугольное сечение:</p>
        <label>Длина:</label>
        <input asp-for="Length" type="number" step="0.01" value=30 required />
    
        <label>Ширина:</label>
        <input asp-for="Width" type="number" step="0.01" value=60 required />
    </div>
    <br>
    <div>
        <p>Тавровое сечение:</p>
        <div>
            <p>Нижняя полка:</p>
            <label>bf:</label>
            <input asp-for="bf" type="number"  step="0.01" value=30 required />
            <label>hf:</label>
            <input asp-for="hf" type="number" step="0.01" value=60 required />
        </div>
        <div>
            <p>Стенка:</p>
            <label>bw:</label>
            <input asp-for="bw" type="number" step="0.01" value=30 required />
            <label>hw:</label>
            <input asp-for="hw" type="number" step="0.01" value=60 required />
        </div>
        <div>
            <p>Верхняя полка:</p>
            <label>b1f:</label>
            <input asp-for="b1f" type="number" step="0.01" value=30 required />
            <label>h1f:</label>
            <input asp-for="h1f" type="number" step="0.01" value=60 required />
        </div>
    </div>
    <br>
    <div>
        <p>Кольцевое сечение:</p>
        <label>Радиус внешний R2:</label>
        <input asp-for="R2" type="number" step="0.01" value=30 required />

        <label>Радиус внутренний R1:</label>
        <input asp-for="R1" type="number" step="0.01" value=60 required />
    </div>

    <br>
    <h4>Усилия</h4>
    <br>
    <div>
        <label>Момент My:</label>
        <input asp-for="My" type="number" step="0.01" value=1000 />
    
        <label>Продольная сила N:</label>
        <input asp-for="N" type="number" step="0.01" value=0 />
    
        <label>Поперечная сила Qx:</label>
        <input asp-for="Qx" type="number" step="0.01" value=0 />
    </div>
    <br>
    <h4>Характеристики бетона</h4>
    <br>    
    <div>
        <label>Класс бетона на растяжение Bft3:</label>
        <input asp-for="Bft3" type="text" list="options"  value="B3i" required />
        <datalist id="options">
            <option value="B1i">B1i</option>
            <option value="B1,5i">B1,5i</option>
            <option value="B2i">B2i</option>
            <option value="B2,5i">B2,5i</option>
            <option value="B2,5i">B3i</option>
        </datalist>
    </div>
    <br>
    <div>
        <label>Класс бетона на растяжение Bft:</label>
        <input asp-for="Bft" type="text" list="options1" value="B3" required />
        <datalist id="options1">
            <option value="B1">B1</option>
            <option value="B1,5">B1,5</option>
            <option value="B2">B2</option>
            <option value="B2,5">B2,5</option>
            <option value="B2,5">B3</option>
        </datalist>

    </div>

    <br>
    <div>
        <label>Класс бетона на сжатие Bf:</label>
        <input asp-for="Bf" type="text" list="options2" value="B30" required />
        <datalist id="options2">
            <option value="B20">B20</option>
            <option value="B25">B25</option>
            <option value="B30">B30</option>
        </datalist>
    </div>    
    <br>
    <h4>Характеристики арматуры</h4>
    <br>
    <div>
        <div>
         <label>Класс aрматуры на растяжение:</label>
        <input asp-for="A_Rs" type="text" list="options3" value="A240" required />
        <datalist id="options3">
            <option value="A240">A240</option>
            <option value="A400">A400</option>
            <option value="A500">A500</option>
            <option value="A600">A600</option>
        </datalist>        
        <label>As:</label>
        <input asp-for="As" type="number" step="0.01" value="0" />
        <label>a:</label>
        <input asp-for="a_cm" type="number" step="0.01" value="0" />
        </div>
        <br>
        <div>
        <label>Класс aрматуры на сжатие:</label>
        <input asp-for="A_Rsc" type="text" list="options4" value="A240" required />
            <datalist id="options4">
                <option value="A240">A240</option>
                <option value="A400">A400</option>
                <option value="A500">A500</option>
                <option value="A600">A600</option>
            </datalist>        
        <label>A's:</label>
        <input asp-for="A1s" type="number" step="0.01" value="0" />
        <label>a':</label>
        <input asp-for="a1_cm" type="number" step="0.01" value="0" />
        </div>
    </div>

    <br>
    <button type="submit">Вычислить </button>
</form>

<div>
@if (ViewBag.Perimeter != 0)
{
    <h3>Периметр: @ViewBag.Perimeter</h3>

    <h3>Площадь: @ViewBag.Area</h3>

    <p>@Html.Raw(ViewBag.HtmlContent?? string.Empty)</p>    
}
</div>
